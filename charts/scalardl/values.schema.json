                                "scalardl": {
                                    "type": "object",
                                    "properties": {
                                        "port": {
                                            "type": "integer"
                                        },
                                        "protocol": {
                                            "type": "string"
                                        },
                                        "targetPort": {
                                            "type": "integer"
                                        }
                                    }
                                },
                                "scalardl-admin": {
                                    "type": "object",
