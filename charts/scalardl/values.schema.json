                        "namespace": {
                            "type": "string"
                        }
                    }
                },
                "strategy": {
                    "type": "object",
                    "properties": {
                        "rollingUpdate": {
                            "type": "object",
                            "properties": {
                                "maxSurge": {
                                    "type": "string"
                                },
                                "maxUnavailable": {
                                    "type": "string"
                                }
                            }
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "tolerations": {
                    "type": "array"
                },
                "useCustomizedConfiguration": {
                    "type": "object",
                    "properties": {
                        "configMapName": {
                            "type": "string"
