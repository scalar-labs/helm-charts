                                    "environmentVariableName": {
                                        "type": "string"
                                    },
                                    "secretKeyName": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "secretName": {
                            "type": "string"
                        },
                        "useSecret": {
                            "type": "boolean"
                        }
                    }
                }
